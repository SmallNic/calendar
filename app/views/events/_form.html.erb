<%= form_for [@calendar, @event] do |f| %>
<% if @event.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

  <ul>
    <% @event.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= f.hidden_field :calendar_id, value: @calendar.id %>

<div class="field">
  <%= f.label :date %><br>
  <%= f.text_field :start_date, class:"datepicker", placeholder:"Date" %>
</div>
<div class="field">
  <%= f.label :time %><br>
  <%= f.time_field :start_time, placeholder:"Time" %>
</div>
<div class="field">
  <%= f.label :event %><br>
  <%= f.text_field :description, placeholder:"Event" %>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
